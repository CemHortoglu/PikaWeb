@{
    Layout = null;
    ViewData["Title"] = "Giriş";
}
<!doctype html>
<html lang="tr" data-lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@ViewData["Title"] - Pika</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/pika-components.css" rel="stylesheet" />
</head>
<body class="pika-auth-body">

    <div class="pika-auth-bg">
        <div class="pika-auth-glow"></div>
    </div>

    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100 py-5">
            <div class="col-12 col-md-10 col-lg-5">
                <div class="pika-auth-card">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <a class="d-flex align-items-center gap-2 text-decoration-none" href="@Url.Action("Index", "Home")">
                            <img src="~/web/logo.svg" alt="Pika" class="pika-logo" onerror="this.style.display='none'">
                            <span class="fw-semibold text-white">Pika</span>
                        </a>
                        <span class="pika-auth-chip"><i class="fa-solid fa-shield-halved me-2"></i>Secure</span>
                    </div>

                    <h1 class="h4 mb-1" data-i18n="login.title">Kurumsal Giriş</h1>
                    <p class="text-white-50 mb-4" data-i18n="login.subtitle">Panelinize erişmek için bilgilerinizi girin.</p>

                    <form method="post" action="@Url.Action("Login", "Auth")" class="vstack gap-3">
                        <div>
                            <label class="form-label" data-i18n="form.email">E-posta</label>
                            <div class="input-group">
                                <span class="input-group-text pika-ig"><i class="fa-regular fa-envelope"></i></span>
                                <input name="email" type="email" class="form-control pika-input" placeholder="mail@firma.com" required>
                            </div>
                        </div>

                        <div>
                            <label class="form-label" data-i18n="login.password">Şifre</label>
                            <div class="input-group">
                                <span class="input-group-text pika-ig"><i class="fa-solid fa-key"></i></span>
                                <input name="password" type="password" class="form-control pika-input" placeholder="••••••••" required>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <label class="d-flex align-items-center gap-2 small text-white-50">
                                <input class="form-check-input m-0" type="checkbox" name="rememberMe">
                                <span data-i18n="login.remember">Beni hatırla</span>
                            </label>
                            <a href="#" class="pika-link small" data-i18n="login.forgot">Şifremi unuttum</a>
                        </div>

                        <button class="btn pika-btn-primary btn-lg w-100" type="submit">
                            <span data-i18n="login.signin">Giriş Yap</span> <i class="fa-solid fa-arrow-right ms-2"></i>
                        </button>

                        <div class="pika-auth-divider"><span data-i18n="login.or">veya</span></div>

                        <button class="btn pika-btn-outline w-100" type="button" onclick="window.location.href='@Url.Action("Contact", "Home")'">
                            <i class="fa-solid fa-handshake me-2"></i><span data-i18n="login.contactSales">Kurumsal teklif al</span>
                        </button>

                        <div class="small text-white-50 mt-2">
                            <i class="fa-solid fa-lock me-2"></i><span data-i18n="login.note">Giriş denemeleri loglanır ve güvenlik politikalarına tabidir.</span>
                        </div>
                    </form>
                </div>

                <div class="text-center mt-3 small text-white-50">
                    © @DateTime.Now.Year Pika
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
