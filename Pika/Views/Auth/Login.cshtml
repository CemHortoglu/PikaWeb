@{
    Layout = null;
    ViewData["Title"] = "Giriş";
}
<!doctype html>
<html lang="@(ViewContext.RouteData.Values["culture"]?.ToString() ?? "tr")" data-lang="@(ViewContext.RouteData.Values["culture"]?.ToString() ?? "tr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@ViewData["Title"] - Pika</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/pika-components.css" rel="stylesheet" />
</head>
<body class="pika-auth-body">

    <div class="pika-auth-shell">
        <div class="pika-auth-layout">
            <section class="pika-auth-showcase">
                <div class="pika-auth-showcase-overlay"></div>
                <div class="pika-auth-showcase-content">
                    <a class="d-inline-flex align-items-center gap-2 text-decoration-none mb-4" href="@Url.Action("Index", "Home")">
                        <img src="~/web/logo.svg" alt="Pika" class="pika-logo" onerror="this.style.display='none'">
                        <span class="fw-semibold text-white fs-5">Pika</span>
                    </a>

                    <span class="pika-auth-tag">Kurumsal Platform</span>
                    <h1 class="pika-auth-hero-title">Dijital büyümenizi tek panelden yönetin.</h1>
                    <p class="pika-auth-hero-desc">
                        Kampanya otomasyonu, segmentasyon ve analitik çözümlerini güvenli altyapı üzerinde birleştirin.
                    </p>

                    <div class="pika-auth-feature-grid">
                        <div class="pika-auth-feature-item">
                            <i class="fa-solid fa-shield-halved"></i>
                            <div>
                                <strong>Güvenli Altyapı</strong>
                                <p>KVKK odaklı veri işleme ve kurumsal güvenlik standartları.</p>
                            </div>
                        </div>
                        <div class="pika-auth-feature-item">
                            <i class="fa-solid fa-chart-line"></i>
                            <div>
                                <strong>Ölçülebilir Performans</strong>
                                <p>Gerçek zamanlı raporlama ile net KPI takibi.</p>
                            </div>
                        </div>
                        <div class="pika-auth-feature-item">
                            <i class="fa-solid fa-bolt"></i>
                            <div>
                                <strong>Hızlı Operasyon</strong>
                                <p>Tekrarlayan süreçleri otomatikleştiren akıllı iş akışları.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="pika-auth-form-wrap">
                <div class="pika-auth-card">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <h2 class="mb-0">Hoş geldiniz</h2>
                        <span class="pika-auth-chip"><i class="fa-solid fa-lock me-2"></i><span data-i18n="login.secure">Güvenli</span></span>
                    </div>
                    <p class="pika-auth-form-subtitle">Yönetim panelinize erişmek için hesap bilgilerinizi girin.</p>

                    <form method="post" action="@Url.Action("Login", "Auth")" class="vstack gap-3">
                        <div>
                            <label class="form-label" data-i18n="form.email">E-posta</label>
                            <div class="input-group">
                                <span class="input-group-text pika-ig"><i class="fa-regular fa-envelope"></i></span>
                                <input name="email" type="email" class="form-control pika-input" placeholder="mail@firma.com" data-i18n-placeholder="form.emailPh" required>
                            </div>
                        </div>

                        <div>
                            <label class="form-label" data-i18n="login.password">Şifre</label>
                            <div class="input-group">
                                <span class="input-group-text pika-ig"><i class="fa-solid fa-key"></i></span>
                                <input name="password" type="password" class="form-control pika-input" placeholder="••••••••" data-i18n-placeholder="login.passwordPh" required>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                            <label class="d-flex align-items-center gap-2 small text-secondary">
                                <input class="form-check-input m-0" type="checkbox" name="rememberMe">
                                <span data-i18n="login.remember">Beni hatırla</span>
                            </label>
                            <a href="#" class="pika-link small" data-i18n="login.forgot">Şifremi unuttum</a>
                        </div>

                        <button class="btn pika-btn-primary btn-lg w-100" type="submit">
                            <span data-i18n="login.signin">Giriş Yap</span> <i class="fa-solid fa-arrow-right ms-2"></i>
                        </button>

                        <div class="pika-auth-divider"><span data-i18n="login.or">veya</span></div>

                        <button class="btn pika-btn-outline w-100" type="button" onclick="window.location.href='@Url.Action("Contact", "Home")'">
                            <i class="fa-solid fa-handshake me-2"></i><span data-i18n="login.contactSales">Kurumsal teklif al</span>
                        </button>
                    </form>

                    <div class="pika-auth-security-note mt-4">
                        <i class="fa-solid fa-circle-info"></i>
                        <span data-i18n="login.note">Giriş denemeleri loglanır ve güvenlik politikalarına tabidir.</span>
                    </div>
                </div>

                <div class="text-center mt-3 small text-secondary">
                    © @DateTime.Now.Year Pika
                </div>
            </section>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
