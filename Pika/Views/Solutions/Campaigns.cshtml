@{ ViewData["Title"] = "Kampanyalar"; }

<section class="pika-page-hero">
    <div class="container">
        <div class="row g-4 align-items-center">
            <div class="col-lg-7">
                <h1 class="pika-h1" data-i18n="camp.h1"></h1>
                <p class="pika-lead" data-i18n="camp.lead"></p>
                <div class="d-flex gap-2 flex-wrap">
                    <button class="btn pika-btn-primary" data-bs-toggle="modal" data-bs-target="#demoModal" data-i18n="camp.demo"></button>
                    <a class="btn pika-btn-outline" href="@Url.Action("Segmentation", "Solutions")" data-i18n="camp.next"></a>
                </div>
            </div>
            <div class="col-lg-5"><img class="img-fluid rounded-4" src="~/web/images/service/service-image-2.png" alt="Campaign" /></div>
        </div>
    </div>
</section>

<section class="pika-section">
    <div class="container">
        <div class="pika-solution-showcase">
            <div class="pika-solution-showcase__content">
                <h2 class="pika-h2" data-i18n="camp.midT"></h2>
                <p class="pika-lead mb-3" data-i18n="camp.midD"></p>
                <ul class="pika-solution-list">
                    <li data-i18n="camp.k1"></li>
                    <li data-i18n="camp.k2"></li>
                    <li data-i18n="camp.k3"></li>
                </ul>
            </div>
            <div class="pika-solution-showcase__visual"><img src="~/web/images/service/service-image-11.jpg" alt="Campaign board" class="img-fluid rounded-4" /></div>
        </div>
        <div class="pika-cta-card mt-5"><h3 data-i18n="camp.ctaT"></h3><p class="text-muted" data-i18n="camp.ctaD"></p><button class="btn pika-btn-primary" data-bs-toggle="modal" data-bs-target="#demoModal" data-i18n="camp.ctaB"></button></div>
    </div>
</section>
