@{
    ViewData["Title"] = "Kampanyalar";
}
<section class="pika-page-hero">
    <div class="container" data-aos="fade-up">
        <h1 class="pika-h1" data-i18n="camp.h1">Kampanya Otomasyonu</h1>
        <p class="pika-lead" data-i18n="camp.lead">Tetikleyiciler, kuponlar ve akışlarla operasyonu azaltın, dönüşümü artırın.</p>
        <div class="d-flex gap-2 flex-wrap">
            <button class="btn pika-btn-primary" data-bs-toggle="modal" data-bs-target="#demoModal" data-i18n="camp.demo">Demo Talebi</button>
            <a class="btn pika-btn-outline" href="/solutions/segmentation" data-i18n="camp.next">Segmentasyon</a>
        </div>
    </div>
</section>

<section class="pika-section">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-4" data-aos="fade-up">
                <div class="pika-card h-100">
                    <div class="pika-card-icon"><i class="fa-solid fa-bolt"></i></div>
                    <h3 class="pika-h3" data-i18n="camp.f1t">Tetikleyiciler</h3>
                    <p class="text-white-50" data-i18n="camp.f1d">Event bazlı akışlar: kayıt, ilk alışveriş, terk edilen sepet, geri kazanım.</p>
                </div>
            </div>
            <div class="col-lg-4" data-aos="fade-up" data-aos-delay="100">
                <div class="pika-card h-100">
                    <div class="pika-card-icon"><i class="fa-solid fa-ticket"></i></div>
                    <h3 class="pika-h3" data-i18n="camp.f2t">Kupon & Teklif</h3>
                    <p class="text-white-50" data-i18n="camp.f2d">Kural bazlı kupon üretimi, limitler, süreler ve kullanım koşulları.</p>
                </div>
            </div>
            <div class="col-lg-4" data-aos="fade-up" data-aos-delay="200">
                <div class="pika-card h-100">
                    <div class="pika-card-icon"><i class="fa-solid fa-paper-plane"></i></div>
                    <h3 class="pika-h3" data-i18n="camp.f3t">Kanal Yönetimi</h3>
                    <p class="text-white-50" data-i18n="camp.f3d">E-posta/SMS/push gibi kanallarda planlama ve performans takibi.</p>
                </div>
            </div>
        </div>
    </div>
</section>
