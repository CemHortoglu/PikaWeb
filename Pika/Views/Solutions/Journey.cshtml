@{ ViewData["Title"] = "Journey Orkestrasyonu"; }

<section class="pika-page-hero journey-hero">
    <div class="container">
        <div class="journey-hero__panel">
            <div class="row g-4 align-items-center">
                <div class="col-lg-7">
                    <span class="journey-chip" data-i18n="jour.chip"></span>
                    <h1 class="pika-h1 mt-3" data-i18n="jour.h1"></h1>
                    <p class="pika-lead mb-4" data-i18n="jour.lead"></p>
                    <div class="journey-kpi-grid">
                        <div class="journey-kpi-item">
                            <div class="journey-kpi-item__value" data-i18n="jour.kpi1v"></div>
                            <div class="journey-kpi-item__label" data-i18n="jour.kpi1l"></div>
                        </div>
                        <div class="journey-kpi-item">
                            <div class="journey-kpi-item__value" data-i18n="jour.kpi2v"></div>
                            <div class="journey-kpi-item__label" data-i18n="jour.kpi2l"></div>
                        </div>
                        <div class="journey-kpi-item">
                            <div class="journey-kpi-item__value" data-i18n="jour.kpi3v"></div>
                            <div class="journey-kpi-item__label" data-i18n="jour.kpi3l"></div>
                        </div>
                    </div>
                    <div class="d-flex gap-2 flex-wrap mt-4">
                        <button class="btn pika-btn-primary" data-bs-toggle="modal" data-bs-target="#demoModal" data-i18n="jour.demo"></button>
                        <a class="btn pika-btn-outline" href="@Url.Action("Campaigns", "Solutions")" data-i18n="jour.next"></a>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="journey-stage-card">
                        <div class="journey-stage-card__title" data-i18n="jour.stageT"></div>
                        <div class="journey-stage-list">
                            <div class="journey-stage-item"><span>01</span><p data-i18n="jour.stage1"></p></div>
                            <div class="journey-stage-item"><span>02</span><p data-i18n="jour.stage2"></p></div>
                            <div class="journey-stage-item"><span>03</span><p data-i18n="jour.stage3"></p></div>
                            <div class="journey-stage-item"><span>04</span><p data-i18n="jour.stage4"></p></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="pika-section">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-4">
                <article class="journey-feature-card">
                    <h3 class="pika-h3" data-i18n="jour.f1t"></h3>
                    <p data-i18n="jour.f1d"></p>
                </article>
            </div>
            <div class="col-lg-4">
                <article class="journey-feature-card">
                    <h3 class="pika-h3" data-i18n="jour.f2t"></h3>
                    <p data-i18n="jour.f2d"></p>
                </article>
            </div>
            <div class="col-lg-4">
                <article class="journey-feature-card">
                    <h3 class="pika-h3" data-i18n="jour.f3t"></h3>
                    <p data-i18n="jour.f3d"></p>
                </article>
            </div>
        </div>

        <div class="journey-governance mt-5">
            <div class="row g-4 align-items-center">
                <div class="col-lg-6">
                    <h2 class="pika-h2" data-i18n="jour.midT"></h2>
                    <p class="pika-lead" data-i18n="jour.midD"></p>
                    <ul class="pika-solution-list journey-list mt-3">
                        <li data-i18n="jour.k1"></li>
                        <li data-i18n="jour.k2"></li>
                        <li data-i18n="jour.k3"></li>
                    </ul>
                </div>
                <div class="col-lg-6">
                    <div class="journey-governance__board">
                        <div class="journey-governance__head" data-i18n="jour.boardT"></div>
                        <div class="journey-governance__line"><strong data-i18n="jour.boardL1"></strong><span data-i18n="jour.boardV1"></span></div>
                        <div class="journey-governance__line"><strong data-i18n="jour.boardL2"></strong><span data-i18n="jour.boardV2"></span></div>
                        <div class="journey-governance__line"><strong data-i18n="jour.boardL3"></strong><span data-i18n="jour.boardV3"></span></div>
                        <div class="journey-governance__line"><strong data-i18n="jour.boardL4"></strong><span data-i18n="jour.boardV4"></span></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="pika-cta-card mt-5">
            <h3 data-i18n="jour.ctaT"></h3>
            <p class="text-muted" data-i18n="jour.ctaD"></p>
            <button class="btn pika-btn-primary" data-bs-toggle="modal" data-bs-target="#demoModal" data-i18n="jour.ctaB"></button>
        </div>
    </div>
</section>
