@{ ViewData["Title"] = "Journey Orkestrasyonu"; }

<section class="journey-corp-hero">
    <div class="container">
        <div class="journey-corp-grid">
            <div>
                <span class="journey-corp-chip" data-i18n="jour.chip"></span>
                <h1 class="journey-corp-title" data-i18n="jour.h1"></h1>
                <p class="journey-corp-lead" data-i18n="jour.lead"></p>

                <div class="journey-corp-stats">
                    <div class="journey-corp-stat">
                        <strong data-i18n="jour.kpi1v"></strong>
                        <span data-i18n="jour.kpi1l"></span>
                    </div>
                    <div class="journey-corp-stat">
                        <strong data-i18n="jour.kpi2v"></strong>
                        <span data-i18n="jour.kpi2l"></span>
                    </div>
                    <div class="journey-corp-stat">
                        <strong data-i18n="jour.kpi3v"></strong>
                        <span data-i18n="jour.kpi3l"></span>
                    </div>
                </div>

                <div class="d-flex gap-2 flex-wrap mt-4">
                    <button class="btn pika-btn-primary" data-bs-toggle="modal" data-bs-target="#demoModal" data-i18n="jour.demo"></button>
                    <a class="btn pika-btn-outline" href="@Url.Action("Campaigns", "Solutions")" data-i18n="jour.next"></a>
                </div>
            </div>

            <aside class="journey-corp-panel" aria-label="Journey odak alanlarÄ±">
                <h3 data-i18n="jour.topicsT"></h3>
                <p data-i18n="jour.topicsD"></p>

                <div class="journey-topic-list">
                    <div class="journey-topic-item">
                        <span class="journey-topic-title" data-i18n="jour.stageT"></span>
                        <span class="journey-topic-copy" data-i18n="jour.stage1"></span>
                    </div>
                    <div class="journey-topic-item">
                        <span class="journey-topic-title" data-i18n="jour.boardL2"></span>
                        <span class="journey-topic-copy" data-i18n="jour.boardV2"></span>
                    </div>
                    <div class="journey-topic-item">
                        <span class="journey-topic-title" data-i18n="jour.boardL4"></span>
                        <span class="journey-topic-copy" data-i18n="jour.boardV4"></span>
                    </div>
                </div>
            </aside>
        </div>
    </div>
</section>

<section class="pika-section pt-5 journey-corp-section">
    <div class="container">
        <div class="journey-corp-card-grid mb-4">
            <article class="journey-corp-card">
                <p class="journey-corp-label" data-i18n="jour.f1t"></p>
                <h3 data-i18n="jour.midT"></h3>
                <p data-i18n="jour.f1d"></p>
            </article>
            <article class="journey-corp-card">
                <p class="journey-corp-label" data-i18n="jour.f2t"></p>
                <h3 data-i18n="jour.boardT"></h3>
                <p data-i18n="jour.f2d"></p>
            </article>
            <article class="journey-corp-card">
                <p class="journey-corp-label" data-i18n="jour.f3t"></p>
                <h3 data-i18n="jour.ctaT"></h3>
                <p data-i18n="jour.f3d"></p>
            </article>
        </div>

        <div class="journey-corp-shell">
            <div class="row g-4 align-items-center">
                <div class="col-lg-6">
                    <h2 class="pika-h2" data-i18n="jour.midT"></h2>
                    <p class="pika-lead" data-i18n="jour.midD"></p>
                    <ul class="pika-solution-list journey-list mt-3">
                        <li data-i18n="jour.k1"></li>
                        <li data-i18n="jour.k2"></li>
                        <li data-i18n="jour.k3"></li>
                    </ul>
                </div>
                <div class="col-lg-6">
                    <div class="journey-corp-board">
                        <div class="journey-corp-board__head" data-i18n="jour.boardT"></div>
                        <div class="journey-corp-board__line"><strong data-i18n="jour.boardL1"></strong><span data-i18n="jour.boardV1"></span></div>
                        <div class="journey-corp-board__line"><strong data-i18n="jour.boardL2"></strong><span data-i18n="jour.boardV2"></span></div>
                        <div class="journey-corp-board__line"><strong data-i18n="jour.boardL3"></strong><span data-i18n="jour.boardV3"></span></div>
                        <div class="journey-corp-board__line"><strong data-i18n="jour.boardL4"></strong><span data-i18n="jour.boardV4"></span></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="pika-cta-card mt-5">
            <h3 data-i18n="jour.ctaT"></h3>
            <p class="text-muted" data-i18n="jour.ctaD"></p>
            <button class="btn pika-btn-primary" data-bs-toggle="modal" data-bs-target="#demoModal" data-i18n="jour.ctaB"></button>
        </div>
    </div>
</section>
