@{ ViewData["Title"] = "Journey Orkestrasyonu"; }

<section class="pika-corp-hero">
    <div class="container">
        <div class="pika-corp-hero__grid">
            <div>
                <span class="pika-corp-chip" data-i18n="jour.chip"></span>
                <h1 class="pika-corp-title" data-i18n="jour.h1"></h1>
                <p class="pika-corp-lead" data-i18n="jour.lead"></p>
                <div class="pika-corp-kpi-grid">
                    <div class="pika-corp-kpi"><strong data-i18n="jour.kpi1v"></strong><span data-i18n="jour.kpi1l"></span></div>
                    <div class="pika-corp-kpi"><strong data-i18n="jour.kpi2v"></strong><span data-i18n="jour.kpi2l"></span></div>
                    <div class="pika-corp-kpi"><strong data-i18n="jour.kpi3v"></strong><span data-i18n="jour.kpi3l"></span></div>
                </div>
                <div class="d-flex gap-2 flex-wrap mt-4">
                    <button class="btn pika-btn-primary" data-bs-toggle="modal" data-bs-target="#demoModal" data-i18n="jour.demo"></button>
                    <a class="btn pika-btn-ghost" href="@Url.Action("Campaigns", "Solutions")" data-i18n="jour.next"></a>
                </div>
            </div>
            <aside class="pika-corp-aside">
                <h3 data-i18n="jour.boardT"></h3>
                <div class="pika-corp-aside-list">
                    <div class="pika-corp-aside-item"><strong data-i18n="jour.boardL1"></strong><span data-i18n="jour.boardV1"></span></div>
                    <div class="pika-corp-aside-item"><strong data-i18n="jour.boardL2"></strong><span data-i18n="jour.boardV2"></span></div>
                    <div class="pika-corp-aside-item"><strong data-i18n="jour.boardL3"></strong><span data-i18n="jour.boardV3"></span></div>
                    <div class="pika-corp-aside-item"><strong data-i18n="jour.boardL4"></strong><span data-i18n="jour.boardV4"></span></div>
                </div>
            </aside>
        </div>
    </div>
</section>

<section class="pika-section pika-corp-section">
    <div class="container">
        <div class="pika-corp-card-grid">
            <article class="pika-corp-card"><h3 data-i18n="jour.midT"></h3><p data-i18n="jour.k1"></p></article>
            <article class="pika-corp-card"><h3 data-i18n="jour.f2t"></h3><p data-i18n="jour.k2"></p></article>
            <article class="pika-corp-card"><h3 data-i18n="jour.f3t"></h3><p data-i18n="jour.k3"></p></article>
        </div>
    </div>
</section>
