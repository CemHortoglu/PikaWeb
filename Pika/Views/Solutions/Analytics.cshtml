@{
    ViewData["Title"] = "Analitik";
}
<section class="pika-page-hero">
    <div class="container" data-aos="fade-up">
        <h1 class="pika-h1" data-i18n="ana.h1">Analitik</h1>
        <p class="pika-lead" data-i18n="ana.lead">Kampanyalarınızın gerçek katkısını görün; LTV ve kohortlarla karar alın.</p>
        <div class="d-flex gap-2 flex-wrap">
            <button class="btn pika-btn-primary" data-bs-toggle="modal" data-bs-target="#demoModal" data-i18n="ana.demo">Demo Talebi</button>
            <a class="btn pika-btn-outline" href="@Url.Action("Integrations", "Solutions")" data-i18n="ana.next">Entegrasyonlar</a>
        </div>
    </div>
</section>

<section class="pika-section">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-4" data-aos="fade-up">
                <div class="pika-card h-100">
                    <div class="pika-card-icon"><i class="fa-solid fa-chart-column"></i></div>
                    <h3 class="pika-h3" data-i18n="ana.f1t">KPI Paneli</h3>
                    <p class="text-white-50" data-i18n="ana.f1d">Dönüşüm, tekrar satın alma, sepet ve kanal bazlı katkı.</p>
                </div>
            </div>
            <div class="col-lg-4" data-aos="fade-up" data-aos-delay="100">
                <div class="pika-card h-100">
                    <div class="pika-card-icon"><i class="fa-solid fa-people-group"></i></div>
                    <h3 class="pika-h3" data-i18n="ana.f2t">Kohort</h3>
                    <p class="text-white-50" data-i18n="ana.f2d">Zaman içinde davranış değişimini izleyin, retention’ı görün.</p>
                </div>
            </div>
            <div class="col-lg-4" data-aos="fade-up" data-aos-delay="200">
                <div class="pika-card h-100">
                    <div class="pika-card-icon"><i class="fa-solid fa-file-export"></i></div>
                    <h3 class="pika-h3" data-i18n="ana.f3t">Raporlama</h3>
                    <p class="text-white-50" data-i18n="ana.f3d">CSV export, API ile BI/warehouse akışları.</p>
                </div>
            </div>
        </div>
    </div>
</section>
