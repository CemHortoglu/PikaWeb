@{
    ViewData["Title"] = "Sadakat";
}
<section class="pika-page-hero">
    <div class="container">
        <div class="row g-4 align-items-center">
            <div class="col-lg-7" data-aos="fade-up">
                <h1 class="pika-h1" data-i18n="loy.h1">Sadakat Yönetimi</h1>
                <p class="pika-lead" data-i18n="loy.lead">Puan, seviye ve ödüllerle müşteri bağlılığını sürdürülebilir hale getirin.</p>
                <div class="d-flex gap-2 flex-wrap">
                    <button class="btn pika-btn-primary" data-bs-toggle="modal" data-bs-target="#demoModal" data-i18n="loy.demo">Demo Talebi</button>
                    <a class="btn pika-btn-outline" href="@Url.Action("Pricing", "Home")" data-i18n="loy.pricing">Fiyatlandırma</a>
                </div>
            </div>
            <div class="col-lg-5" data-aos="fade-up" data-aos-delay="120">
                <div class="pika-hero-mini">
                    <div class="pika-mini-item"><i class="fa-solid fa-gift"></i><div><div class="fw-semibold" data-i18n="loy.m1t">Ödül Kataloğu</div><div class="small text-white-50" data-i18n="loy.m1d">Esnek ödül kurgusu</div></div></div>
                    <div class="pika-mini-item"><i class="fa-solid fa-layer-group"></i><div><div class="fw-semibold" data-i18n="loy.m2t">Seviyeler</div><div class="small text-white-50" data-i18n="loy.m2d">Tier bazlı avantajlar</div></div></div>
                    <div class="pika-mini-item"><i class="fa-solid fa-gear"></i><div><div class="fw-semibold" data-i18n="loy.m3t">Kurallar</div><div class="small text-white-50" data-i18n="loy.m3d">Otomatik puanlama</div></div></div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="pika-section">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-4" data-aos="fade-up">
                <div class="pika-card h-100">
                    <div class="pika-card-icon"><i class="fa-solid fa-coins"></i></div>
                    <h3 class="pika-h3" data-i18n="loy.f1t">Puan & Harcama</h3>
                    <p class="text-white-50" data-i18n="loy.f1d">Alışverişe, kategoriye veya aksiyona göre puan kazanımı ve harcama.</p>
                </div>
            </div>
            <div class="col-lg-4" data-aos="fade-up" data-aos-delay="100">
                <div class="pika-card h-100">
                    <div class="pika-card-icon"><i class="fa-solid fa-id-card-clip"></i></div>
                    <h3 class="pika-h3" data-i18n="loy.f2t">Üyelik Deneyimi</h3>
                    <p class="text-white-50" data-i18n="loy.f2d">Müşterinin puan/level durumunu net gösteren, kurumsal UI.</p>
                </div>
            </div>
            <div class="col-lg-4" data-aos="fade-up" data-aos-delay="200">
                <div class="pika-card h-100">
                    <div class="pika-card-icon"><i class="fa-solid fa-shield"></i></div>
                    <h3 class="pika-h3" data-i18n="loy.f3t">Suistimal Önleme</h3>
                    <p class="text-white-50" data-i18n="loy.f3d">Kural limitleri, denetim izleri ve rol bazlı yetkilendirme.</p>
                </div>
            </div>
        </div>

        <div class="pika-cta-card mt-5" data-aos="fade-up">
            <div class="row align-items-center g-4">
                <div class="col-lg-8">
                    <h3 class="mb-2" data-i18n="loy.ctaT">Sadakat kurgunuzu birlikte tasarlayalım</h3>
                    <p class="text-white-50 mb-0" data-i18n="loy.ctaD">Sektörünüze uygun puan/level modelini KPI’larla netleştirelim.</p>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <button class="btn pika-btn-primary btn-lg w-100 w-lg-auto" data-bs-toggle="modal" data-bs-target="#demoModal" data-i18n="loy.ctaB">Demo Talebi</button>
                </div>
            </div>
        </div>
    </div>
</section>
