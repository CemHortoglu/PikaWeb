@{ ViewData["Title"] = "Segmentasyon"; }

<section class="pika-page-hero">
    <div class="container">
        <div class="row g-4 align-items-center">
            <div class="col-lg-7">
                <h1 class="pika-h1" data-i18n="seg.h1"></h1>
                <p class="pika-lead" data-i18n="seg.lead"></p>
                <div class="d-flex gap-2 flex-wrap">
                    <button class="btn pika-btn-primary" data-bs-toggle="modal" data-bs-target="#demoModal" data-i18n="seg.demo"></button>
                    <a class="btn pika-btn-outline" href="@Url.Action("Analytics", "Solutions")" data-i18n="seg.next"></a>
                </div>
            </div>
            <div class="col-lg-5"><img class="img-fluid rounded-4" src="~/web/images/service/service-image-3.png" alt="Segmentation" /></div>
        </div>
    </div>
</section>

<section class="pika-section">
    <div class="container">
        <div class="pika-solution-showcase">
            <div class="pika-solution-showcase__content">
                <h2 class="pika-h2" data-i18n="seg.midT"></h2>
                <p class="pika-lead mb-3" data-i18n="seg.midD"></p>
                <ul class="pika-solution-list"><li data-i18n="seg.k1"></li><li data-i18n="seg.k2"></li><li data-i18n="seg.k3"></li></ul>
            </div>
            <div class="pika-solution-showcase__visual"><img src="~/web/images/service/service-image-12.jpg" alt="Segmentation dashboard" class="img-fluid rounded-4" /></div>
        </div>
        <div class="pika-cta-card mt-5"><h3 data-i18n="seg.ctaT"></h3><p class="text-muted" data-i18n="seg.ctaD"></p><button class="btn pika-btn-primary" data-bs-toggle="modal" data-bs-target="#demoModal" data-i18n="seg.ctaB"></button></div>
    </div>
</section>
