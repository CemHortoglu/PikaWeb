@{ ViewData["Title"] = "İletişim"; }
<section class="pika-corp-hero">
    <div class="container">
        <div class="pika-corp-hero__grid">
            <div>
                <span class="pika-corp-chip">Kurumsal İletişim</span>
                <h1 class="pika-corp-title" data-i18n="contact.h1"></h1>
                <p class="pika-corp-lead" data-i18n="contact.lead"></p>
                <div class="pika-corp-kpi-grid">
                    <div class="pika-corp-kpi"><strong>30 dk</strong><span>Kritik taleplere dönüş</span></div>
                    <div class="pika-corp-kpi"><strong>Aynı Gün</strong><span>Standart geri bildirim</span></div>
                    <div class="pika-corp-kpi"><strong>Çok Kanal</strong><span>Mail, telefon, portal</span></div>
                </div>
            </div>
            <aside class="pika-corp-aside">
                <h3 data-i18n="contact.infoTitle"></h3>
                <div class="pika-corp-aside-list">
                    <div class="pika-corp-aside-item"><strong data-i18n="contact.mail"></strong><span>info@pika.com</span></div>
                    <div class="pika-corp-aside-item"><strong data-i18n="contact.phone"></strong><span>+90 (000) 000 00 00</span></div>
                    <div class="pika-corp-aside-item"><strong data-i18n="contact.address"></strong><span>İstanbul, Türkiye</span></div>
                </div>
            </aside>
        </div>
    </div>
</section>

<section class="pika-section pika-corp-section">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-6">
                <div class="pika-corp-shell h-100">
                    <h3 class="pika-h3 mb-3" data-i18n="contact.formTitle"></h3>
                    <form class="row g-3">
                        <div class="col-md-6"><label class="form-label" data-i18n="form.fullName"></label><input class="form-control pika-input" placeholder="Ad Soyad"></div>
                        <div class="col-md-6"><label class="form-label" data-i18n="form.email"></label><input type="email" class="form-control pika-input" placeholder="mail@firma.com"></div>
                        <div class="col-12"><label class="form-label" data-i18n="form.message"></label><textarea class="form-control pika-input" rows="5" placeholder="Mesajınız..."></textarea></div>
                        <div class="col-12 d-flex gap-2 flex-wrap"><button type="button" class="btn pika-btn-primary" data-bs-toggle="modal" data-bs-target="#demoModal" data-i18n="contact.demo"></button><button type="submit" class="btn pika-btn-outline" data-i18n="contact.send"></button></div>
                        <div class="small text-secondary" data-i18n="form.privacy"></div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="pika-corp-shell h-100">
                    <h3 class="pika-h3 mb-3" data-i18n="contact.infoTitle"></h3>
                    <div class="pika-info-line"><i class="fa-regular fa-envelope"></i><div><div class="fw-semibold" data-i18n="contact.mail"></div><a class="pika-link" href="mailto:info@pika.com">info@pika.com</a></div></div>
                    <div class="pika-info-line"><i class="fa-solid fa-phone"></i><div><div class="fw-semibold" data-i18n="contact.phone"></div><div class="text-secondary">+90 (000) 000 00 00</div></div></div>
                    <div class="pika-info-line"><i class="fa-solid fa-location-dot"></i><div><div class="fw-semibold" data-i18n="contact.address"></div><div class="text-secondary">İstanbul, Türkiye</div></div></div>
                    <div class="pika-map mt-3"><div class="pika-map-placeholder"><i class="fa-regular fa-map"></i><div class="text-secondary small mt-2" data-i18n="contact.map"></div></div></div>
                    <div class="mt-4"><div class="pika-cta-mini"><div><div class="fw-semibold" data-i18n="contact.ctaT"></div><div class="text-secondary small" data-i18n="contact.ctaD"></div></div><a class="btn btn-sm pika-btn-outline" href="@Url.Action("Pricing", "Home")" data-i18n="contact.ctaB"></a></div></div>
                </div>
            </div>
        </div>
    </div>
</section>
