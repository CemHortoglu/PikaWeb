@{
    ViewData["Title"] = "Kurumsal";
}
<section class="pika-page-hero">
    <div class="container">
        <div class="row g-4 align-items-center">
            <div class="col-lg-7" data-aos="fade-up">
                <h1 class="pika-h1" data-i18n="corp.h1">Kurumsal</h1>
                <p class="pika-lead" data-i18n="corp.lead">Güven, sürdürülebilirlik ve ölçülebilir büyüme için tasarlanmış bir sadakat altyapısı.</p>
                <div class="d-flex gap-2 flex-wrap">
                    <button class="btn pika-btn-primary" data-bs-toggle="modal" data-bs-target="#demoModal" data-i18n="corp.demo">Demo Talebi</button>
                    <a class="btn pika-btn-outline" href="@Url.Action("Contact", "Home")" data-i18n="corp.contact">İletişime Geç</a>
                </div>
            </div>
            <div class="col-lg-5" data-aos="fade-up" data-aos-delay="120">
                <div class="pika-stats">
                    <div class="pika-stat">
                        <div class="pika-stat-val">99.9%</div>
                        <div class="pika-stat-lbl" data-i18n="corp.s1">Uptime hedefi</div>
                    </div>
                    <div class="pika-stat">
                        <div class="pika-stat-val">RBAC</div>
                        <div class="pika-stat-lbl" data-i18n="corp.s2">Rol bazlı yetki</div>
                    </div>
                    <div class="pika-stat">
                        <div class="pika-stat-val">API</div>
                        <div class="pika-stat-lbl" data-i18n="corp.s3">Entegrasyon mimarisi</div>
                    </div>
                    <div class="pika-stat">
                        <div class="pika-stat-val">KVKK</div>
                        <div class="pika-stat-lbl" data-i18n="corp.s4">Uyum odaklı</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="pika-section">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-4" data-aos="fade-up">
                <div class="pika-card h-100">
                    <div class="pika-card-icon"><i class="fa-solid fa-bullseye"></i></div>
                    <h3 class="pika-h3" data-i18n="corp.m1t">Misyon</h3>
                    <p class="text-white-50" data-i18n="corp.m1d">Müşteri sadakatini şeffaf metriklerle yönetilebilir hale getirmek.</p>
                </div>
            </div>
            <div class="col-lg-4" data-aos="fade-up" data-aos-delay="100">
                <div class="pika-card h-100">
                    <div class="pika-card-icon"><i class="fa-solid fa-handshake"></i></div>
                    <h3 class="pika-h3" data-i18n="corp.m2t">Değerler</h3>
                    <p class="text-white-50" data-i18n="corp.m2d">Güven, kullanıcı deneyimi, veri sorumluluğu ve süreklilik.</p>
                </div>
            </div>
            <div class="col-lg-4" data-aos="fade-up" data-aos-delay="200">
                <div class="pika-card h-100">
                    <div class="pika-card-icon"><i class="fa-solid fa-shield-halved"></i></div>
                    <h3 class="pika-h3" data-i18n="corp.m3t">Güvenlik</h3>
                    <p class="text-white-50" data-i18n="corp.m3d">Kurumsal erişim kontrolü, denetim kayıtları ve güvenli entegrasyon modeli.</p>
                </div>
            </div>
        </div>

        <div class="pika-cta-card mt-5" data-aos="fade-up">
            <div class="row align-items-center g-4">
                <div class="col-lg-8">
                    <h3 class="mb-2" data-i18n="corp.ctaT">Kurumsal ihtiyaçlar için birlikte planlayalım</h3>
                    <p class="text-white-50 mb-0" data-i18n="corp.ctaD">Kapsam, entegrasyon ve KPI setine göre yol haritası çıkaralım.</p>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <button class="btn pika-btn-primary btn-lg w-100 w-lg-auto" data-bs-toggle="modal" data-bs-target="#demoModal" data-i18n="corp.ctaB">Demo Talebi</button>
                </div>
            </div>
        </div>
    </div>
</section>
