@{ ViewData["Title"] = "Fiyatlandırma"; }
<section class="pika-corp-hero">
    <div class="container">
        <div class="pika-corp-hero__grid">
            <div>
                <span class="pika-corp-chip">Kurumsal Paket Yapısı</span>
                <h1 class="pika-corp-title" data-i18n="price.h1"></h1>
                <p class="pika-corp-lead" data-i18n="price.lead"></p>
                <div class="pika-corp-kpi-grid">
                    <div class="pika-corp-kpi"><strong>Esnek</strong><span>Kullanıma göre ölçeklenme</span></div>
                    <div class="pika-corp-kpi"><strong>SLA</strong><span>Kurumsal destek seviyeleri</span></div>
                    <div class="pika-corp-kpi"><strong>Güvenli</strong><span>RBAC & uyum paketi</span></div>
                </div>
            </div>
            <aside class="pika-corp-aside">
                <h3>Planlama Notu</h3>
                <div class="pika-corp-aside-list">
                    <div class="pika-corp-aside-item"><strong>Start</strong><span>Kısa sürede devreye alma</span></div>
                    <div class="pika-corp-aside-item"><strong>Growth</strong><span>Operasyon + analitik ölçekleme</span></div>
                    <div class="pika-corp-aside-item"><strong>Enterprise</strong><span>Özel sözleşme ve mimari danışmanlık</span></div>
                </div>
            </aside>
        </div>
    </div>
</section>

<section class="pika-section pika-corp-section">
    <div class="container">
        <div class="row g-4 align-items-stretch">
            <div class="col-lg-4"><div class="pika-price-card h-100"><div class="pika-price-title" data-i18n="price.p1t"></div><div class="pika-price-value">₺<span>9.900</span><small class="text-muted">/ay</small></div><div class="text-muted" data-i18n="price.p1d"></div><ul class="pika-ul"><li data-i18n="price.p1f1"></li><li data-i18n="price.p1f2"></li><li data-i18n="price.p1f3"></li></ul><button class="btn pika-btn-outline w-100 mt-2" data-bs-toggle="modal" data-bs-target="#demoModal" data-i18n="price.choose"></button></div></div>
            <div class="col-lg-4"><div class="pika-price-card pika-price-card--featured h-100"><div class="pika-featured-badge" data-i18n="price.best"></div><div class="pika-price-title" data-i18n="price.p2t"></div><div class="pika-price-value">₺<span>24.900</span><small class="text-muted">/ay</small></div><div class="text-muted" data-i18n="price.p2d"></div><ul class="pika-ul"><li data-i18n="price.p2f1"></li><li data-i18n="price.p2f2"></li><li data-i18n="price.p2f3"></li><li data-i18n="price.p2f4"></li></ul><button class="btn pika-btn-primary w-100 mt-2" data-bs-toggle="modal" data-bs-target="#demoModal" data-i18n="price.choose"></button></div></div>
            <div class="col-lg-4"><div class="pika-price-card h-100"><div class="pika-price-title" data-i18n="price.p3t"></div><div class="pika-price-value"><span data-i18n="price.custom"></span></div><div class="text-muted" data-i18n="price.p3d"></div><ul class="pika-ul"><li data-i18n="price.p3f1"></li><li data-i18n="price.p3f2"></li><li data-i18n="price.p3f3"></li></ul><a class="btn pika-btn-outline w-100 mt-2" href="@Url.Action("Contact", "Home")" data-i18n="price.contact"></a></div></div>
        </div>

        <div class="pika-corp-shell mt-5">
            <h2 class="pika-h2 mb-3" data-i18n="price.compare"></h2>
            <div class="table-responsive"><table class="table pika-table align-middle"><thead><tr><th data-i18n="price.feature"></th><th>Start</th><th>Growth</th><th>Enterprise</th></tr></thead><tbody><tr><td data-i18n="price.row1"></td><td><i class="fa-solid fa-check"></i></td><td><i class="fa-solid fa-check"></i></td><td><i class="fa-solid fa-check"></i></td></tr><tr><td data-i18n="price.row2"></td><td>—</td><td><i class="fa-solid fa-check"></i></td><td><i class="fa-solid fa-check"></i></td></tr><tr><td data-i18n="price.row3"></td><td>—</td><td><i class="fa-solid fa-check"></i></td><td><i class="fa-solid fa-check"></i></td></tr><tr><td data-i18n="price.row4"></td><td>—</td><td>—</td><td><i class="fa-solid fa-check"></i></td></tr></tbody></table></div>
            <div class="text-muted small mt-2" data-i18n="price.note"></div>
        </div>
    </div>
</section>
