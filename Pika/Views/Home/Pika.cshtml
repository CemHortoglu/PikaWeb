@{ ViewData["Title"] = "Pika"; }

<section class="pika-corp-hero">
    <div class="container">
        <div class="pika-corp-hero__grid">
            <div>
                <span class="pika-corp-chip" data-i18n="pika.chip"></span>
                <h1 class="pika-corp-title" data-i18n="pika.h1"></h1>
                <p class="pika-corp-lead" data-i18n="pika.lead"></p>
                <div class="pika-corp-kpi-grid">
                    <div class="pika-corp-kpi"><strong data-i18n="pika.kpi1v"></strong><span data-i18n="pika.kpi1l"></span></div>
                    <div class="pika-corp-kpi"><strong data-i18n="pika.kpi2v"></strong><span data-i18n="pika.kpi2l"></span></div>
                    <div class="pika-corp-kpi"><strong data-i18n="pika.kpi3v"></strong><span data-i18n="pika.kpi3l"></span></div>
                </div>
                <div class="d-flex gap-2 flex-wrap mt-4">
                    <button class="btn pika-btn-primary" data-bs-toggle="modal" data-bs-target="#demoModal" data-i18n="pika.demo"></button>
                    <a class="btn pika-btn-ghost" href="@Url.Action("Contact", "Home")" data-i18n="pika.contact"></a>
                </div>
            </div>
            <aside class="pika-corp-aside">
                <h3 data-i18n="pika.boardT"></h3>
                <div class="pika-corp-aside-list">
                    <div class="pika-corp-aside-item"><strong data-i18n="pika.boardL1"></strong><span data-i18n="pika.boardV1"></span></div>
                    <div class="pika-corp-aside-item"><strong data-i18n="pika.boardL2"></strong><span data-i18n="pika.boardV2"></span></div>
                    <div class="pika-corp-aside-item"><strong data-i18n="pika.boardL3"></strong><span data-i18n="pika.boardV3"></span></div>
                    <div class="pika-corp-aside-item"><strong data-i18n="pika.boardL4"></strong><span data-i18n="pika.boardV4"></span></div>
                </div>
            </aside>
        </div>
    </div>
</section>

<section class="pika-section pika-corp-section">
    <div class="container">
        <div class="pika-corp-card-grid">
            <article class="pika-corp-card"><h3 data-i18n="pika.f1t"></h3><p data-i18n="pika.f1d"></p></article>
            <article class="pika-corp-card"><h3 data-i18n="pika.f2t"></h3><p data-i18n="pika.f2d"></p></article>
            <article class="pika-corp-card"><h3 data-i18n="pika.f3t"></h3><p data-i18n="pika.f3d"></p></article>
        </div>

        <div class="pika-cta-card mt-5">
            <h3 data-i18n="pika.ctaT"></h3>
            <p class="text-muted" data-i18n="pika.ctaD"></p>
            <ul class="text-muted mb-4 ps-3">
                <li data-i18n="pika.ctaL1"></li>
                <li data-i18n="pika.ctaL2"></li>
                <li data-i18n="pika.ctaL3"></li>
                <li data-i18n="pika.ctaL4"></li>
            </ul>
            <button class="btn pika-btn-primary" data-bs-toggle="modal" data-bs-target="#demoModal" data-i18n="pika.ctaB"></button>
        </div>
    </div>
</section>
