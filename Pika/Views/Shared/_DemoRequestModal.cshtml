<div class="modal fade" id="demoModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <form id="demoRequestForm">
                <div class="modal-header">
                    <h5 class="modal-title" data-i18n="demo.title">Demo Request</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body demo-request-modal">
                    <p class="mb-3" data-i18n="demo.subtitle">Please fill in your contact information and we will call you back.</p>
                    <div class="row g-2">
                        <div class="col-md-6"><input class="form-control" name="firstName" required placeholder="Ad" data-i18n-placeholder="form.fullNamePh" /></div>
                        <div class="col-md-6"><input class="form-control" name="lastName" required placeholder="Soyad" data-i18n-placeholder="form.lastNamePh" /></div>
                        <div class="col-md-6"><input class="form-control" type="email" name="email" required placeholder="mail@firma.com" data-i18n-placeholder="form.emailPh" /></div>
                        <div class="col-md-6"><input class="form-control" name="phone" required placeholder="+90 ..." data-i18n-placeholder="form.phonePh" /></div>
                        <div class="col-md-6"><input class="form-control" name="companyName" required placeholder="Åžirket" data-i18n-placeholder="form.companyPh" /></div>
                        <div class="col-md-6"><input class="form-control" name="website" required placeholder="Website" data-i18n-placeholder="form.websitePh" /></div>
                    </div>
                    <div class="mt-2">
                        <textarea class="form-control" rows="6" name="message" placeholder="Mesaj" data-i18n-placeholder="form.messagePh"></textarea>
                    </div>
                    <div id="demoResult" class="pika-alert d-none mt-3"></div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" data-i18n="form.send">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>
