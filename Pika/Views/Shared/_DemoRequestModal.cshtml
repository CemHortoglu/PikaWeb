<div class="modal fade" id="demoModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content pika-modal">
            <div class="modal-header border-0">
                <div>
                    <h5 class="modal-title mb-1" data-i18n="demo.title">Demo Talebi</h5>
                    <div class="text-white-50 small" data-i18n="demo.subtitle">Kısa bilgileri bırakın, ekibimiz sizinle iletişime geçsin.</div>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body pt-0">
                <form id="demoRequestForm" class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label" data-i18n="form.fullName">Ad Soyad</label>
                        <input class="form-control pika-input" name="fullName" required placeholder="Ad Soyad" data-i18n-placeholder="form.fullNamePh">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" data-i18n="form.company">Şirket</label>
                        <input class="form-control pika-input" name="company" required placeholder="Şirket" data-i18n-placeholder="form.companyPh">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" data-i18n="form.email">E-posta</label>
                        <input type="email" class="form-control pika-input" name="email" required placeholder="mail@firma.com" data-i18n-placeholder="form.emailPh">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" data-i18n="form.phone">Telefon</label>
                        <input class="form-control pika-input" name="phone" placeholder="+90 ..." data-i18n-placeholder="form.phonePh">
                    </div>
                    <div class="col-12">
                        <label class="form-label" data-i18n="form.message">Mesaj</label>
                        <textarea class="form-control pika-input" name="message" rows="4" placeholder="Kısaca ihtiyacınızı yazın..." data-i18n-placeholder="form.messagePh"></textarea>
                    </div>

                    <div class="col-12 d-flex flex-column flex-sm-row justify-content-between align-items-sm-center gap-2">
                        <div class="small text-white-50">
                            <i class="fa-solid fa-lock me-2"></i><span data-i18n="form.privacy">Bilgileriniz gizli tutulur.</span>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="button" class="btn pika-btn-outline" data-bs-dismiss="modal" data-i18n="form.close">Kapat</button>
                            <button type="submit" class="btn pika-btn-primary">
                                <span class="me-2" data-i18n="form.send">Gönder</span>
                                <i class="fa-solid fa-arrow-right"></i>
                            </button>
                        </div>
                    </div>

                    <div class="col-12">
                        <div id="demoResult" class="pika-alert d-none"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
