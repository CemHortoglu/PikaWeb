@{
    var title = ViewData["Title"] as string ?? "Pika";
    var bodyClass = ViewData["BodyClass"] as string ?? string.Empty;
    var appVersion = System.Reflection.Assembly.GetEntryAssembly()?.GetName().Version?.ToString(3) ?? "1.0.0";
    var toast = TempData["Toast"] as string;
}
<!doctype html>
<html lang="tr" data-lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@title - Pika</title>

    <meta name="description" content="Pika — Kullanıcı sadakat ve kampanya otomasyon platformu." />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" rel="stylesheet">
    <link href="~/web/css/remixicon.css" rel="stylesheet" />

    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/pika-components.css" rel="stylesheet" />

    <link rel="icon" href="~/web/assets/images/favicon.png" />
</head>
<body class="pika-body @bodyClass">
    <div class="preloader-area text-center position-fixed top-0 bottom-0 start-0 end-0" id="preloader">
        <div class="loader position-absolute start-0 end-0">
            <div class="position-relative fw-light">
                <span class="d-inline-block"><img src="~/web/assets/images/logo.png" alt="logo"></span>
            </div>
        </div>
    </div>

    <div class="top-header-info">
        <div class="top-header-area bg-color-0c3a30">
            <div class="container-fluid side-padding">
                <div class="row">
                    <div class="col-lg-8 col-md-12">
                        <ul class="left-side">
                            <li><span data-i18n="CampaignSlogan">Campaign Slogan</span></li>
                            <li><a href="tel:+903123254114"><i class="flaticon-phone-call"></i> <b data-i18n="Telephone">Telephone</b>: +90 (312) 325 41 14</a></li>
                            <li><a href="mailto:info@pikaanalysis.com"><i class="flaticon-email-1"></i> <b data-i18n="EMailAddress">E-Mail</b>: info@pikaanalysis.com</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-4 col-md-12">
                        <ul class="right-side">
                            <li><a href="#" data-i18n="Support">Support</a></li>
                            <li>
                                <div class="flag position-relative language-dropdown dropdown">
                                    <button class="btn btn-link p-0 border-0 dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <img id="currentLangFlag" src="~/web/assets/images/svg/tr.svg" width="16" height="16" class="me-1 rounded-circle" alt="lang" />
                                        <span id="langLabel">TR</span>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><button class="dropdown-item d-flex align-items-center" type="button" data-lang-set="tr"><img src="~/web/assets/images/svg/tr.svg" width="16" height="16" class="me-2" alt="tr" />TR</button></li>
                                        <li><button class="dropdown-item d-flex align-items-center" type="button" data-lang-set="en"><img src="~/web/assets/images/svg/flag.svg" width="16" height="16" class="me-2" alt="en" />EN</button></li>
                                        <li><button class="dropdown-item d-flex align-items-center" type="button" data-lang-set="de"><img src="~/web/assets/images/svg/euro.svg" width="16" height="16" class="me-2" alt="de" />DE</button></li>
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <nav class="navbar navbar-expand-lg bg-color-ffffff" id="navbar">
            <div class="container-fluid side-padding position-relative">
                <a class="navbar-brand logo-brand p-0" href="@Url.Action("Index", "Home")">
                    <img src="~/web/assets/images/logo.png" alt="image">
                </a>
                <a class="navbar-toggler" data-bs-toggle="offcanvas" href="#navbarOffcanvas" role="button" aria-controls="navbarOffcanvas">
                    <span class="burger-menu">
                        <span class="top-bar"></span>
                        <span class="middle-bar"></span>
                        <span class="bottom-bar"></span>
                    </span>
                </a>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")" data-i18n="Home">Home</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" data-i18n="Solutions">Solutions</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/solutions/campaign-management" data-i18n="CampaignManagement">Campaign Management</a></li>
                                <li><a class="dropdown-item" href="/solutions/email-marketing" data-i18n="EmailMarketing">Email Marketing</a></li>
                                <li><a class="dropdown-item" href="/solutions/sms-marketing" data-i18n="SmsMarketing">Sms Marketing</a></li>
                                <li><a class="dropdown-item" href="/solutions/push-notification" data-i18n="PushNotification">Push Notification</a></li>
                                <li><a class="dropdown-item" href="/solutions/recommendation-engine" data-i18n="RecommendationEngine">Recommendation Engine</a></li>
                                <li><a class="dropdown-item" href="/solutions/mobile-marketing" data-i18n="MobileMarketing">Mobile Marketing</a></li>
                                <li><a class="dropdown-item" href="/solutions/advanced-bi-solutions" data-i18n="AdvancedBISolutions">Advanced BI Solutions</a></li>
                                <li><a class="dropdown-item" href="/solutions/ai-transformations" data-i18n="AiTransformations">Ai Transformations</a></li>
                            </ul>
                        </li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Pricing", "Home")" data-i18n="Pricing">Pricing</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" data-i18n="Corporate">Corporate</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="@Url.Action("Corporate", "Home")" data-i18n="WhyPika">Why Pika</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Corporate", "Home")" data-i18n="AboutUs">About Us</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Corporate", "Home")" data-i18n="FAQ">FAQ</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Login", "Auth")" data-i18n="Login">Login</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Corporate", "Home")" data-i18n="CustomerServices">Customer Services</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Corporate", "Home")" data-i18n="CorporateSupportServices">Corporate Support Services</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Corporate", "Home")" data-i18n="Career">Career</a></li>
                            </ul>
                        </li>
                        <li class="nav-item"><a class="nav-link" href="/admin/contacts" data-i18n="Contacts">Contacts</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Contact", "Home")" data-i18n="Contact">Contact</a></li>
                    </ul>
                </div>
                <div class="others-options">
                    <ul class="d-flex align-items-center ps-0 mb-0 list-unstyled">
                        <li><button type="button" class="search-btn" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="ri-search-line"></i> <span data-i18n="Search">Search</span></button></li>
                        <li><a href="@Url.Action("Login", "Auth")" class="search-btn login"><i class="ri-account-circle-line"></i> <span data-i18n="Login">Login</span></a></li>
                        <li><button type="button" class="default-btn" data-bs-toggle="modal" data-bs-target="#demoModal"><span data-i18n="DemoRequest">Demo Request</span> <i class="ri-arrow-right-up-line"></i></button></li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <div class="mobile-navbar offcanvas offcanvas-end border-0" data-bs-backdrop="static" tabindex="-1" id="navbarOffcanvas">
        <div class="offcanvas-header">
            <a href="@Url.Action("Index", "Home")" class="logo d-inline-block">
                <img src="~/web/assets/images/white-logo.png" alt="logo">
            </a>
            <button type="button" class="close-btn bg-transparent position-relative lh-1 p-0 border-0" data-bs-dismiss="offcanvas" aria-label="close">
                <i class="ri-close-fill"></i>
            </button>
        </div>
        <div class="offcanvas-body">
            <ul class="mobile-menu">
                <li class="mobile-menu-list without-icon"><a href="@Url.Action("Index", "Home")" class="nav-link" data-i18n="Home">Home</a></li>
                <li class="mobile-menu-list"><a href="javascript:void(0);" data-i18n="Solutions">Solutions</a>
                    <ul class="mobile-menu-items">
                        <li><a class="dropdown-item" href="/solutions/campaign-management" data-i18n="CampaignManagement">Campaign Management</a></li>
                        <li><a class="dropdown-item" href="/solutions/email-marketing" data-i18n="EmailMarketing">Email Marketing</a></li>
                        <li><a class="dropdown-item" href="/solutions/sms-marketing" data-i18n="SmsMarketing">Sms Marketing</a></li>
                        <li><a class="dropdown-item" href="/solutions/push-notification" data-i18n="PushNotification">Push Notification</a></li>
                    </ul>
                </li>
                <li class="mobile-menu-list without-icon"><a href="@Url.Action("Pricing", "Home")" class="nav-link" data-i18n="Pricing">Pricing</a></li>
                <li class="mobile-menu-list without-icon"><a href="@Url.Action("Corporate", "Home")" class="nav-link" data-i18n="Corporate">Corporate</a></li>
                <li class="mobile-menu-list without-icon"><a href="@Url.Action("Contact", "Home")" class="nav-link" data-i18n="Contact">Contact</a></li>
            </ul>

            <div class="others-options">
                <ul class="d-flex align-items-center ps-0 mb-0 list-unstyled">
                    <li><button type="button" class="search-btn" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="ri-search-line"></i> <span data-i18n="Search">Search</span></button></li>
                    <li><a href="@Url.Action("Login", "Auth")" class="search-btn login"><i class="ri-account-circle-line"></i> <span data-i18n="Login">Login</span></a></li>
                    <li><button type="button" class="default-btn" data-bs-toggle="modal" data-bs-target="#demoModal"><span data-i18n="DemoRequest">Demo Request</span> <i class="ri-arrow-right-up-line"></i></button></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="search-modal modal fade" id="exampleModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header position-relative">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form class="popup-form">
                        <input type="text" class="form-control" placeholder="Arama">
                        <button type="submit" class="popup-btn"><i class="ri-search-line"></i></button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <main>
        @RenderBody()
    </main>

    <footer>
        <div class="footer-area bg-color-0c3a30 pt-120">
            <div class="container">
                <div class="row">
                    <div class="col-xl-4 col-lg-9 col-md-6">
                        <div class="footer-weight">
                            <h2 class="text-white" data-i18n="NewsletterTitle">Newsletter</h2>
                            <form class="footer-form position-relative">
                                <input type="email" class="form-control" data-i18n-placeholder="EnterEmail" placeholder="Enter Email">
                                <button type="submit" class="default-btn"><span data-i18n="SubscribeButton">Subscribe</span> <i class="ri-arrow-right-up-line"></i></button>
                            </form>
                        </div>
                    </div>
                    <div class="col-xl-2 col-lg-4 col-md-6">
                        <div class="footer-weight part-two ps-5">
                            <h3 class="text-white" data-i18n="QuickLinks">Quick Links</h3>
                            <ul class="service-link">
                                <li><a href="#" data-i18n="Solutions">Solutions</a></li>
                                <li><a href="#" data-i18n="AboutUs">About Us</a></li>
                                <li><a href="#" data-i18n="WhyPika">Why Pika</a></li>
                                <li><a href="#" data-i18n="Pricing">Pricing</a></li>
                                <li><a href="#" data-i18n="Contact">Contact</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-4 col-md-6">
                        <div class="footer-weight part-three ps-5">
                            <h3 class="text-white" data-i18n="Corporate">Corporate</h3>
                            <ul class="service-link">
                                <li><a href="#" data-i18n="Login">Login</a></li>
                                <li><a href="#" data-i18n="CustomerServices">Customer Services</a></li>
                                <li><a href="#" data-i18n="CorporateSupportServices">Corporate Support Services</a></li>
                                <li><a href="#" data-i18n="FAQ">FAQ</a></li>
                                <li><a href="#" data-i18n="Career">Career</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-4 col-md-6">
                        <div class="footer-weight ps-5">
                            <h3 class="text-white" data-i18n="Contact">Contact</h3>
                            <ul class="get-touch">
                                <li><img class="phone" src="~/web/assets/images/svg/mail.svg" alt="image"><span class="text-white"><b>Email:</b></span><a href="mailto:info@pikaanalysis.com" class="text-white text-decoration-none">info@pikaanalysis.com</a></li>
                                <li><img class="phone" src="~/web/assets/images/svg/phone.svg" alt="image"><span class="text-white"><b>Phone:</b></span><a href="tel:+903123254114">+90 (312) 325 41 14</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="copyright-area bg-color-0c3a30">
            <div class="container">
                <div class="copyright-border">
                    <div class="row g-4 align-items-center">
                        <div class="col-lg-4 col-md-6"><p>© <span>Pika Analysis</span> <span data-i18n="AllRightsReserved">All rights reserved.</span></p></div>
                        <div class="col-lg-4 col-md-6">
                            <div class="copy-image"><a href="@Url.Action("Index", "Home")" class="d-block"><img src="~/web/assets/images/white-logo.png" alt="image"></a></div>
                        </div>
                        <div class="col-lg-4 col-md-12 d-flex justify-content-between align-items-center">
                            <ul>
                                <li><a href="#" data-i18n="PrivacyPolicy">Privacy Policy</a></li>
                                <li><a href="#" data-i18n="TermsConditions">Terms Conditions</a></li>
                            </ul>
                            <span class="text-white version-badge">v@appVersion</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="go-top"><i class="ri-arrow-up-fill"></i></div>
    </footer>

    @await Html.PartialAsync("_DemoRequestModal")

    @if (!string.IsNullOrWhiteSpace(toast))
    {
        <div class="pika-toast" data-toast="@toast"></div>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
