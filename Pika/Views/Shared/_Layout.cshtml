@{
    var title = ViewData["Title"] as string ?? "Pika";
    var bodyClass = ViewData["BodyClass"] as string ?? string.Empty;
    var appVersion = System.Reflection.Assembly.GetEntryAssembly()?.GetName().Version?.ToString(3) ?? "1.0.0";
    var toast = TempData["Toast"] as string;
    var culture = (ViewContext.RouteData.Values["culture"]?.ToString() ?? "tr").ToLowerInvariant();
}
<!doctype html>
<html lang="@culture" data-lang="@culture">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@title - Pika</title>

    <meta name="description" content="Pika — Kullanıcı sadakat ve kampanya otomasyon platformu." />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" rel="stylesheet">
    <link href="~/web/css/remixicon.css" rel="stylesheet" />

    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/pika-components.css" rel="stylesheet" />

    <link rel="icon" href="~/web/assets/images/favicon.png" />
</head>
<body class="pika-body @bodyClass">


    <div class="top-header-info">
        <div class="top-header-area bg-color-0c3a30">
            <div class="container-fluid side-padding">
                <div class="row">
                    <div class="col-lg-8 col-md-12">
                        <ul class="left-side">
                            <li><span data-i18n="topbar.security">Campaign Slogan</span></li>
                            <li><a href="tel:+903123254114"><i class="flaticon-phone-call"></i> <b data-i18n="topbar.support">Telephone</b>: +90 (312) 325 41 14</a></li>
                            <li><a href="mailto:info@pikaanalysis.com"><i class="flaticon-email-1"></i> <b data-i18n="contact.mail">E-Mail</b>: info@pikaanalysis.com</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-4 col-md-12">
                        <ul class="right-side">
                            <li><a href="#" data-i18n="nav.contact">Support</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <nav class="navbar navbar-expand-lg bg-color-ffffff" id="navbar">
            <div class="container-fluid side-padding position-relative">
                <a class="navbar-brand logo-brand p-0" href="@Url.Action("Index", "Home")">
                    <img src="~/web/assets/images/logo.png" alt="image">
                </a>
                <a class="navbar-toggler" data-bs-toggle="offcanvas" href="#navbarOffcanvas" role="button" aria-controls="navbarOffcanvas">
                    <span class="burger-menu">
                        <span class="top-bar"></span>
                        <span class="middle-bar"></span>
                        <span class="bottom-bar"></span>
                    </span>
                </a>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")" data-i18n="nav.home">Home</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" data-i18n="nav.solutions">Solutions</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="@Url.Action("EmailMarketing", "Solutions")">Email Marketing</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("SmsCampaigns", "Solutions")">SMS Campaigns</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("WhatsAppMessaging", "Solutions")">WhatsApp Messaging</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("PushNotifications", "Solutions")">Push Notifications</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Personalization", "Solutions")">Personalization</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Reporting", "Solutions")">Reporting</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("DataManagementEtl", "Solutions")">Data Management ETL</a></li>
                            </ul>
                        </li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Pricing", "Home")" data-i18n="nav.pricing">Pricing</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" data-i18n="nav.corporate">Corporate</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="@Url.Action("Pika", "Home")" data-i18n="nav.pika">Pika</a></li>
                                <li><button type="button" class="dropdown-item " data-bs-toggle="modal" data-bs-target="#demoModal"><span data-i18n="nav.demo">Demo Talebi</span></button></li>
                                <li><a class="dropdown-item" href="@Url.Action("Login", "Auth")">Giriş</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Faq", "Home")" data-i18n="nav.faq">Sık Sorulan Sorular</a></li>
                            </ul>
                        </li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Contact", "Home")" data-i18n="nav.contact">Contact</a></li>
                    </ul>
                </div>
                <div class="others-options">
                    <ul class="d-flex align-items-center ps-0 mb-0 list-unstyled">
                        <li>
                            <div class="flag position-relative language-dropdown dropdown nav-language-dropdown">
                                <button class="btn btn-link p-0 border-0 dropdown-toggle nav-language-trigger" type="button" data-bs-toggle="dropdown" aria-expanded="false" aria-label="Language selector">
                                    <i class="ri-global-line"></i>
                                    <span id="langLabel" data-lang-label>@culture.ToUpperInvariant()</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><button class="dropdown-item" type="button" data-lang-set="tr">Türkçe (TR)</button></li>
                                    <li><button class="dropdown-item" type="button" data-lang-set="en">English (EN)</button></li>
                                </ul>
                            </div>
                        </li>
                        <li><a href="@Url.Action("Login", "Auth")" class="search-btn login"><i class="ri-account-circle-line"></i> <span data-i18n="nav.login">Login</span></a></li>
                        <li><button type="button" class="default-btn" data-bs-toggle="modal" data-bs-target="#demoModal"><span data-i18n="nav.demo">Demo Request</span> <i class="ri-arrow-right-up-line"></i></button></li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <div class="mobile-navbar offcanvas offcanvas-end border-0" data-bs-backdrop="static" tabindex="-1" id="navbarOffcanvas">
        <div class="offcanvas-header">
            <a href="@Url.Action("Index", "Home")" class="logo d-inline-block">
                <img src="~/web/assets/images/white-logo.png" alt="logo">
            </a>
            <button type="button" class="close-btn bg-transparent position-relative lh-1 p-0 border-0" data-bs-dismiss="offcanvas" aria-label="close">
                <i class="ri-close-fill"></i>
            </button>
        </div>
        <div class="offcanvas-body">
            <ul class="mobile-menu">
                <li class="mobile-menu-list without-icon"><a href="@Url.Action("Index", "Home")" class="nav-link" data-i18n="nav.home">Home</a></li>
                <li class="mobile-menu-list"><a href="javascript:void(0);" data-i18n="nav.solutions">Solutions</a>
                    <ul class="mobile-menu-items">
                        <li><a class="dropdown-item" href="@Url.Action("EmailMarketing", "Solutions")">Email Marketing</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("SmsCampaigns", "Solutions")">SMS Campaigns</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("WhatsAppMessaging", "Solutions")">WhatsApp Messaging</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("PushNotifications", "Solutions")">Push Notifications</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Personalization", "Solutions")">Personalization</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Reporting", "Solutions")">Reporting</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("DataManagementEtl", "Solutions")">Data Management ETL</a></li>
                    </ul>
                </li>
                <li class="mobile-menu-list without-icon"><a href="@Url.Action("Pricing", "Home")" class="nav-link" data-i18n="nav.pricing">Pricing</a></li>
                <li class="mobile-menu-list"><a href="javascript:void(0);" data-i18n="nav.corporate">Corporate</a>
                    <ul class="mobile-menu-items">
                        <li><a class="dropdown-item" href="@Url.Action("Pika", "Home")" data-i18n="nav.pika">Pika</a></li>
                        <li><button type="button" class="dropdown-item" data-bs-toggle="modal" data-bs-target="#demoModal"><span data-i18n="nav.demo">Demo Talebi</span></button></li>
                        <li><a class="dropdown-item" href="@Url.Action("Login", "Auth")">Giriş</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Faq", "Home")" data-i18n="nav.faq">Sık Sorulan Sorular</a></li>
                    </ul>
                </li>
                <li class="mobile-menu-list without-icon"><a href="@Url.Action("Contact", "Home")" class="nav-link" data-i18n="nav.contact">Contact</a></li>
            </ul>

            <div class="others-options">
                <ul class="d-flex align-items-center ps-0 mb-0 list-unstyled">
                    <li>
                        <div class="flag position-relative language-dropdown dropdown nav-language-dropdown">
                            <button class="btn btn-link p-0 border-0 dropdown-toggle nav-language-trigger" type="button" data-bs-toggle="dropdown" aria-expanded="false" aria-label="Language selector">
                                <i class="ri-global-line"></i>
                                <span data-lang-label>@culture.ToUpperInvariant()</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><button class="dropdown-item" type="button" data-lang-set="tr">Türkçe (TR)</button></li>
                                <li><button class="dropdown-item" type="button" data-lang-set="en">English (EN)</button></li>
                            </ul>
                        </div>
                    </li>
                    <li><a href="@Url.Action("Login", "Auth")" class="search-btn login"><i class="ri-account-circle-line"></i> <span data-i18n="nav.login">Login</span></a></li>
                    <li><button type="button" class="default-btn" data-bs-toggle="modal" data-bs-target="#demoModal"><span data-i18n="nav.demo">Demo Request</span> <i class="ri-arrow-right-up-line"></i></button></li>
                </ul>
            </div>
        </div>
    </div>

    <main>
        @RenderBody()
    </main>

    <footer>
        <div class="footer-area bg-color-0c3a30 pt-120">
            <div class="container">
                <div class="row">
                    <div class="col-xl-4 col-lg-9 col-md-6">
                        <div class="footer-weight">
                            <h2 class="text-white" data-i18n="footer.ctaTitle">Newsletter</h2>
                            <form class="footer-form position-relative">
                                <input type="email" class="form-control" data-i18n-placeholder="form.emailPh" placeholder="Enter Email">
                                <button type="submit" class="default-btn"><span data-i18n="form.send">Subscribe</span> <i class="ri-arrow-right-up-line"></i></button>
                            </form>
                        </div>
                    </div>
                    <div class="col-xl-2 col-lg-4 col-md-6">
                        <div class="footer-weight part-two ps-5">
                            <h3 class="text-white" data-i18n="footer.product">Quick Links</h3>
                            <ul class="service-link">
                                <li><a href="@Url.Action("Index", "Home")" data-i18n="nav.home">Home</a></li>
                                <li><a href="@Url.Action("Solutions", "Home")" data-i18n="nav.solutions">Solutions</a></li>
                                <li><a href="@Url.Action("Pricing", "Home")" data-i18n="nav.pricing">Pricing</a></li>
                                <li><a href="@Url.Action("Corporate", "Home")" data-i18n="nav.corporate">Corporate</a></li>
                                <li><a href="@Url.Action("Contact", "Home")" data-i18n="nav.contact">Contact</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-4 col-md-6">
                        <div class="footer-weight part-three ps-5">
                            <h3 class="text-white" data-i18n="nav.corporate">Corporate</h3>
                            <ul class="service-link">
                                <li><a href="@Url.Action("Pika", "Home")">Pika</a></li>
                                <li><button type="button" class="dropdown-item p-0 border-0 bg-transparent text-start text-white" data-bs-toggle="modal" data-bs-target="#demoModal"><span data-i18n="nav.demo">Demo Talebi</span></button></li>
                                <li><a href="@Url.Action("Login", "Auth")">Giriş</a></li>
                                <li><a href="@Url.Action("Faq", "Home")" data-i18n="nav.faq">Sık Sorulan Sorular</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-4 col-md-6">
                        <div class="footer-weight ps-5">
                            <h3 class="text-white" data-i18n="nav.contact">Contact</h3>
                            <ul class="get-touch">
                                <li><img class="phone" src="~/web/assets/images/svg/mail.svg" alt="image"><span class="text-white"><b>Email:</b></span><a href="mailto:info@pikaanalysis.com" class="text-white text-decoration-none">info@pikaanalysis.com</a></li>
                                <li><img class="phone" src="~/web/assets/images/svg/phone.svg" alt="image"><span class="text-white"><b>Phone:</b></span><a href="tel:+903123254114">+90 (312) 325 41 14</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="copyright-area bg-color-0c3a30">
            <div class="container">
                <div class="copyright-border">
                    <div class="row g-4 align-items-center">
                        <div class="col-lg-4 col-md-6"><p>© <span>Pika Analysis</span> <span data-i18n="footer.rights">All rights reserved.</span></p></div>
                        <div class="col-lg-4 col-md-6">
                            <div class="copy-image"><a href="@Url.Action("Index", "Home")" class="d-block"><img src="~/web/assets/images/white-logo.png" alt="image"></a></div>
                        </div>
                        <div class="col-lg-4 col-md-12 d-flex justify-content-between align-items-center">
                            <ul>
                                <li><a href="#" data-i18n="footer.kvkk">Privacy Policy</a></li>
                                <li><a href="#" data-i18n="footer.terms">Terms Conditions</a></li>
                            </ul>
                            <span class="text-white version-badge">v@appVersion</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="go-top"><i class="ri-arrow-up-fill"></i></div>
    </footer>

    @await Html.PartialAsync("_DemoRequestModal")

    @if (!string.IsNullOrWhiteSpace(toast))
    {
        <div class="pika-toast" data-toast="@toast"></div>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
