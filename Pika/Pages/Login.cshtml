@page
@model LoginModel
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null; /* Kendi layout'unu kullanır */
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pika Yönetim Paneli - Giriş</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="login-split">
        <div class="login-bg d-flex align-items-end p-5 text-white">
            <div style="z-index: 2; position: relative;" class="mb-5">
                <h2 class="display-4 fw-bold">Veri odaklı büyüme.</h2>
                <p class="lead">Pika ile müşteri sadakatinin geleceğini keşfedin.</p>
            </div>
        </div>

        <div class="login-form-container">
            <div class="w-100" style="max-width: 400px;">
                <div class="text-center mb-5">
                    <h1 class="text-primary fw-bold mb-2">Pika</h1>
                    <p class="text-muted">Yönetim Paneli Girişi</p>
                </div>

                <form>
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="email" placeholder="name@example.com">
                        <label for="email">E-posta Adresi</label>
                    </div>
                    <div class="form-floating mb-4">
                        <input type="password" class="form-control" id="password" placeholder="Password">
                        <label for="password">Şifre</label>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="remember">
                            <label class="form-check-label small" for="remember">Beni Hatırla</label>
                        </div>
                        <a href="#" class="small text-decoration-none">Şifremi Unuttum</a>
                    </div>
                    <button class="btn btn-primary-custom w-100 py-3 mb-3" type="submit">Giriş Yap</button>

                    <div class="text-center small text-muted mt-4">
                        Hesabınız yok mu? <a href="#" class="fw-bold text-primary">Başvuru Yapın</a>
                    </div>
                </form>

                <div class="mt-5 text-center text-muted small">
                    &copy; 2026 Pika. Tüm hakları saklıdır.
                </div>
            </div>
        </div>
    </div>
</body>
</html>