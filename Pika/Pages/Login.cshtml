@page
@{
    ViewData["Title"] = "Giriş";
}

<section class="section-space">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="glass-card">
                    <h2 class="mb-2">Kurumsal Giriş</h2>
                    <p class="text-secondary">Pika yönetim panelinize güvenli giriş yapın.</p>
                    <form class="row g-3 mt-2">
                        <div class="col-12"><label class="small mb-1">Kurumsal E-posta</label><input type="email" class="form-control" required></div>
                        <div class="col-12"><label class="small mb-1">Şifre</label><input type="password" class="form-control" required></div>
                        <div class="col-12 d-flex justify-content-between"><div class="form-check"><input class="form-check-input" type="checkbox" id="remember"><label class="form-check-label" for="remember">Beni hatırla</label></div><a href="#" class="text-decoration-none">Şifremi unuttum</a></div>
                        <div class="col-12"><button class="btn btn-brand w-100" type="submit">Giriş Yap</button></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
