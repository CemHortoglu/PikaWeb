@page
@{
    ViewData["Title"] = "İletişim";
}

<div class="bg-light py-5">
    <div class="container py-5">
        <div class="row g-5">
            <!-- Contact Info -->
            <div class="col-lg-5" data-aos="fade-right">
                <h6 class="text-primary fw-bold text-uppercase">Bize Ulaşın</h6>
                <h1 class="display-5 fw-bold mb-4">Bir sorunuz mu var?</h1>
                <p class="lead text-muted mb-5">
                    Projeleriniz, fiyatlandırma veya demo talepleriniz için ekibimizle iletişime geçin.
                </p>

                <div class="d-flex align-items-start mb-4">
                    <div class="icon-box me-3 flex-shrink-0" style="width:50px; height:50px;">
                        <i class="bi bi-geo-alt-fill fs-4"></i>
                    </div>
                    <div>
                        <h5 class="fw-bold">Ofisimiz</h5>
                        <p class="text-muted">Maslak Mah. Büyükdere Cad. No:123<br>Sarıyer, İstanbul</p>
                    </div>
                </div>

                <div class="d-flex align-items-start mb-4">
                    <div class="icon-box me-3 flex-shrink-0" style="width:50px; height:50px;">
                        <i class="bi bi-envelope-fill fs-4"></i>
                    </div>
                    <div>
                        <h5 class="fw-bold">E-posta</h5>
                        <p class="text-muted">merhaba@pika.com.tr</p>
                    </div>
                </div>

                <div class="d-flex align-items-start">
                    <div class="icon-box me-3 flex-shrink-0" style="width:50px; height:50px;">
                        <i class="bi bi-telephone-fill fs-4"></i>
                    </div>
                    <div>
                        <h5 class="fw-bold">Telefon</h5>
                        <p class="text-muted">+90 (212) 555 00 00</p>
                    </div>
                </div>
            </div>

            <!-- Form -->
            <div class="col-lg-7" data-aos="fade-left">
                <div class="bg-white p-5 rounded-4 shadow-sm border">
                    <h3 class="fw-bold mb-4">Mesaj Gönderin</h3>
                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label small fw-bold">Adınız</label>
                                <input type="text" class="form-control bg-light border-0 py-3">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label small fw-bold">Soyadınız</label>
                                <input type="text" class="form-control bg-light border-0 py-3">
                            </div>
                            <div class="col-12">
                                <label class="form-label small fw-bold">E-posta Adresiniz</label>
                                <input type="email" class="form-control bg-light border-0 py-3">
                            </div>
                            <div class="col-12">
                                <label class="form-label small fw-bold">Konu</label>
                                <select class="form-select bg-light border-0 py-3">
                                    <option>Demo Talebi</option>
                                    <option>Teknik Destek</option>
                                    <option>Satış</option>
                                    <option>Diğer</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label class="form-label small fw-bold">Mesajınız</label>
                                <textarea class="form-control bg-light border-0 py-3" rows="4"></textarea>
                            </div>
                            <div class="col-12 mt-4">
                                <button type="submit" class="btn btn-primary-custom w-100 py-3">Gönder</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>