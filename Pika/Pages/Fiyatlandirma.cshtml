@page
@{
    ViewData["Title"] = "Fiyatlandırma";
}

<section class="inner-hero">
    <div class="container text-center">
        <h1>Kurumsal ölçekte şeffaf fiyatlandırma</h1>
        <p class="text-secondary">İş hacminize göre ölçeklenen planlarla hızlı başlayın.</p>
    </div>
</section>

<section class="section-space pt-2">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-4"><div class="plan-card"><h5>Start</h5><div class="plan-price">₺2.500<small class="fs-6">/ay</small></div><ul><li>5.000 üye</li><li>Temel sadakat akışları</li><li>E-posta desteği</li></ul><button class="btn btn-ghost w-100">Başla</button></div></div>
            <div class="col-lg-4"><div class="plan-card popular"><span class="badge badge-soft mb-2">En çok tercih edilen</span><h5>Growth</h5><div class="plan-price">₺7.900<small class="fs-6">/ay</small></div><ul><li>50.000 üye</li><li>Oyunlaştırma + Kupon</li><li>Öncelikli destek</li></ul><button class="btn btn-brand w-100">Satış ile Görüş</button></div></div>
            <div class="col-lg-4"><div class="plan-card"><h5>Enterprise</h5><div class="plan-price">Özel</div><ul><li>Sınırsız kullanım</li><li>Özel entegrasyonlar</li><li>Dedicated CSM</li></ul><button class="btn btn-ghost w-100">Teklif Al</button></div></div>
        </div>
    </div>
</section>
