@page
@{
    ViewData["Title"] = "Müşteri Analitiği (Insights)";
}

<div class="container py-5">
    <div class="row align-items-center mb-5">
        <div class="col-lg-6" data-aos="fade-right">
            <h6 class="text-primary fw-bold text-uppercase">Pika Insights</h6>
            <h1 class="display-4 fw-bold mb-4">Veriyi Anlama Sanatı</h1>
            <p class="lead text-muted">
                Ham veriyi stratejik içgörüye dönüştürüyoruz. Müşterilerinizin ne istediğini onlar söylemeden anlayın.
            </p>
            <ul class="list-group list-group-flush mb-4">
                <li class="list-group-item bg-transparent border-0 ps-0"><i class="bi bi-arrow-right text-primary me-2"></i> RFM Analizi</li>
                <li class="list-group-item bg-transparent border-0 ps-0"><i class="bi bi-arrow-right text-primary me-2"></i> Churn (Kayıp) Tahmini</li>
                <li class="list-group-item bg-transparent border-0 ps-0"><i class="bi bi-arrow-right text-primary me-2"></i> Sepet Analizi</li>
            </ul>
        </div>
        <div class="col-lg-6" data-aos="fade-left">
            <div class="bg-dark p-4 rounded-4 shadow text-white">
                <!-- Fake Chart Visualization -->
                <div class="d-flex justify-content-between mb-4">
                    <h5 class="fw-bold">Aylık Büyüme</h5>
                    <span class="badge bg-success">+%24</span>
                </div>
                <div class="progress mb-3" style="height: 10px;">
                    <div class="progress-bar bg-primary" role="progressbar" style="width: 75%"></div>
                </div>
                <div class="progress mb-3" style="height: 10px;">
                    <div class="progress-bar bg-info" role="progressbar" style="width: 60%"></div>
                </div>
                <div class="progress mb-3" style="height: 10px;">
                    <div class="progress-bar bg-secondary" role="progressbar" style="width: 85%"></div>
                </div>
                <small class="text-white-50 mt-2 d-block">Son 30 günlük aktivite raporu</small>
            </div>
        </div>
    </div>
</div>